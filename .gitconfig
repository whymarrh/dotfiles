[core]
	editor = vim
	pager = less
[user]
	name = Whymarrh Whitby
	email = whymarrh.whitby@gmail.com
[color]
	status = auto
	diff = auto
	branch = auto
[alias]
	dry = add -n
	update = add -u
	a = add .
	d = diff
	l = log --pretty=format:'%h -%Cred%d%Creset %s' --abbrev-commit
	lg = log --graph --pretty=format:'%h%Cred%d%Creset %s' --abbrev-commit
	ldate = log --pretty=format:'%h -%Cred%d%Creset %s (%cr by %an)' --abbrev-commit
	newest = log --pretty=format:'%h -%Cred%d%Creset %s' --abbrev-commit -5
	ls = ls-tree -r --name-only HEAD
	la = ls-tree -r --name-only HEAD
	s = status
	ss = status --short
[push]
	default = simple
[sendemail]
	smtpencryption = tls
	smtpuser = whymarrh.whitby@gmail.com
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	confirm = always
[http]
	postBuffer = 1099511627776

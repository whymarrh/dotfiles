" use vim settings, rather than vi
set nocompatible

set number
set history=1024
set showmode

syntax on

set nobackup
set nowb
set noswapfile

" indentation
set autoindent
set smartindent
set smarttab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab

set nowrap
" allow arrow keys to wrap
set whichwrap=<,>,h,l,[,]

" scrolling
set scrolloff=10
set sidescrolloff=10
set sidescroll=1

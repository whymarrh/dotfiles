[core]
	editor       = vim
	pager        = less -x4
	excludesfile = ~/.gitignore
[color]
	status = auto
	diff   = auto
	branch = auto
	ui     = true
[alias]
	rewrite         = rebase --interactive
	listbranches    = branch --verbose --verbose
	listallbranches = branch --verbose --verbose --all
	m               = merge --no-ff
	dry             = add --all --dry-run
	a               = add --ignore-removal
	d               = diff --minimal
	detach-head     = checkout --detach HEAD
	diffstat        = diff --stat
	changed         = diff --diff-filter=MR
	l               = log --oneline --decorate
	lg              = log --oneline --decorate --graph --all
	newest          = log --oneline --decorate -10
	ls              = ls-tree -r --name-only HEAD
	la              = ls-tree -r --name-only HEAD
	shove           = push --force-with-lease
	ss              = status
	s               = status --short
	stat            = show --stat
[advice]
	detachedHead = false
	statusHints = false
[push]
	default = simple
	followTags = true
[rebase]
	autosquash = true
[grep]
	lineNumber = true

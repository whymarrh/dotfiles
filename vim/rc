" Use vim settings, rather than vi
set nocompatible

" Disable viminfo
set viminfo=""

" Use hidden buffers liberally
set hidden

set ruler
set number
set history=1024
set showmode

" Syntax highlighting
syntax on
colorscheme jellybeans

" Custom whitespace characters
set list
set listchars=tab:▸\ ,eol:¬

" Disable syntax for Markdown files
au BufRead *.md set ft=

set autoread
set hlsearch
set nobackup
set nowb
set noswapfile

" Indentation
set autoindent
set smartindent
set smarttab
set shiftwidth=8
set softtabstop=8
set tabstop=8

" File encoding
set fileencodings=utf-8

set nowrap
" Allow arrow keys to wrap
set whichwrap=<,>,h,l,[,]
set backspace=indent,eol,start

" Filename tab completion
set wildmenu
set wildignore=*.o,*.obj,*~
set wildignore+=*.pyo,*.pyc
set wildignore+=*DS_Store*,*.class
set wildignore+=*.png,*.jpg,*.gif

" Scrolling
set scrolloff=10
set sidescrolloff=10
set sidescroll=1
